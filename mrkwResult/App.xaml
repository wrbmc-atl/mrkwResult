<Application x:Class="mrkwResult.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:mrkwResult"
             StartupUri="Views/WindowLauncher.xaml">
    <Application.Resources>
        <Style TargetType="TextBox">
            <!-- 共通のプロパティ -->
            <Setter Property="Margin" Value="5"/>
            <!--<Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="20"/>-->
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <!-- 共通のイベント -->
            <EventSetter Event="PreviewTextInput" Handler="TextBox_PreviewInput"/>
            <EventSetter Event="PreviewKeyDown" Handler="TextBox_PreviewInput"/>
            <EventSetter Event="KeyDown" Handler="FocusTransfer"/>
            <EventSetter Event="GotFocus" Handler="TextBox_GotFocus"/>
            <!-- 共通のトリガー -->
            <Style.Triggers>
                <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="Decimal">
                    <Setter Property="HorizontalContentAlignment" Value="Right"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="Integer">
                    <Setter Property="HorizontalContentAlignment" Value="Right"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <!--<Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="20"/>-->
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Background" Value="LightGray"/>
            <EventSetter Event="KeyDown" Handler="FocusTransfer"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="LightBlue"/>
                </Trigger>
                <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="Decimal">
                    <Setter Property="HorizontalContentAlignment" Value="Right"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="Integer">
                    <Setter Property="HorizontalContentAlignment" Value="Right"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <!--<Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="20"/>-->
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="LightGray"/>
            <EventSetter Event="KeyDown" Handler="FocusTransfer"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="LightBlue"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
