<Window x:Class="Views.WindowEditCourseMaster"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" 
        xmlns:local="clr-namespace:Views"
        xmlns:viewmodels="clr-namespace:ViewModels"
        xmlns:converters="clr-namespace:mrkwResult.Common"  
        mc:Ignorable="d"
        FontSize="20"
        FontFamily="07やさしさゴシック"
        Title="コースマスタ編集_WindowEditCourseMaster"
        Height="640" Width="900"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Window.Background>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#F0F4F8" Offset="0"/>
            <GradientStop Color="#E0E8F0" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisiblityConverter"/>
        <converters:BooleanToCharConverter x:Key="BooleanToCharConverter"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.Effect>
            <DropShadowEffect Color="#0000A0" Direction="315" ShadowDepth="5" BlurRadius="10" Opacity="0.2"/>
        </Grid.Effect>
        <Border Background="White" CornerRadius="10" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <GroupBox Header="検索" Grid.Row="0" Margin="0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="コース:" Grid.Column="0" VerticalAlignment="Center" Margin="5" Width="80"/>
                        <ComboBox x:Name="cmbCourse_Search" Grid.Column="1" SelectionChanged="SelectionChanged_SearchCOURSE_CD"
                                ItemsSource="{Binding obcCourse, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                SelectedValuePath="COURSE_CD" DisplayMemberPath="COURSE_NM_DISP" Margin="5" HorizontalAlignment="Left"/>
                        <Button Click="Click_Search" Grid.Column="3" Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="Magnify" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="検索" Grid.Column="1" VerticalAlignment="Center" Foreground="White"/>
                            </Grid>
                        </Button>
                    </Grid>
                </GroupBox>
                <GroupBox Header="コース情報" Grid.Row="1" Margin="0,10,0,0">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="コース:" Grid.Row="2" Grid.Column="0" Margin="5"/>
                        <TextBox Text="{Binding CourseInfo.COURSE_NM, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Row="2" Grid.Column="1" Margin="5" IsEnabled="False" Focusable="False"/>
                        <TextBlock Text="表示順:" Grid.Row="3" Grid.Column="0" Margin="5"/>
                        <TextBox Text="{Binding CourseInfo.DISPORDER, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Row="3" Grid.Column="1" Margin="5" TextAlignment="Right" IsEnabled="False" Focusable="False"/>
                        <TextBlock Text="アイテム:" Grid.Row="4" Grid.Column="0" Margin="5"/>
                        <TextBox Text="{Binding CourseInfo.ITEM, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Row="4" Grid.Column="1" Margin="5"/>
                        <TextBlock Text="ショートカット:" Grid.Row="5" Grid.Column="0" Margin="5"/>
                        <TextBox Text="{Binding CourseInfo.SHTC, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Row="5" Grid.Column="1" Margin="5"/>
                        <TextBlock Text="画像パス:" Grid.Row="6" Grid.Column="0" Margin="5"/>
                        <TextBox Text="{Binding CourseInfo.SHTC_PIC, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Row="6" Grid.Column="1" Margin="5"/>
                        <TextBlock Text="備考:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Top" Margin="5"/>
                        <TextBox Text="{Binding CourseInfo.REMARK, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Row="7" Grid.Column="1" Height="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="5"/>
                    </Grid>
                </GroupBox>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Click="UpdateButton_Click" Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <iconPacks:PackIconMaterial Kind="ContentSave" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="White"/>
                            <TextBlock Text="更新" Grid.Column="1" VerticalAlignment="Center" Foreground="White"/>
                        </Grid>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
