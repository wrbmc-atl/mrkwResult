<UserControl x:Class="Views.UserControls.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Views.UserControls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="150"
             Name="numericUpDown">
    <UserControl.Resources>
        <local:IntNullableConverter x:Key="intNullableConverter"/>
    </UserControl.Resources>

    <Grid VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- 数値表示用のテキストボックス -->
        <TextBox Grid.Column="0"
                 x:Name="valueTextBox"
                 Text="{Binding ElementName=numericUpDown, Path=Value, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource intNullableConverter}}"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Right"
                 Padding="0"
                 FontSize="18"
                 BorderBrush="#CCCCCC"
                 BorderThickness="1"
                 Margin="0,0,1,0"
                 PreviewKeyDown="ValueTextBox_PreviewKeyDown"/>

        <!-- 上下ボタンを配置する垂直スタックパネル -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <!-- 値を増やすボタン -->
            <Button x:Name="upButton"
                    Click="UpButton_Click"
                    Height="15"
                    Width="15"
                    Padding="0"
                    Background="#F0F0F0"
                    BorderBrush="#CCCCCC"
                    Focusable="False">
                <iconPacks:PackIconModern Kind="ArrowUp" Width="10" Height="10" Foreground="Gray"/>
            </Button>
            <!-- 値を減らすボタン -->
            <Button x:Name="downButton"
                    Click="DownButton_Click"
                    Height="15"
                    Width="15"
                    Padding="0"
                    Background="#F0F0F0"
                    BorderBrush="#CCCCCC"
                    Focusable="False">
                <iconPacks:PackIconModern Kind="ArrowDown" Width="10" Height="10" Foreground="Gray"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
