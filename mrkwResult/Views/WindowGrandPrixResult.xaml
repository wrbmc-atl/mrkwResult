<Window x:Class="Views.WindowGrandPrixResult"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Views"
        mc:Ignorable="d"
        FontSize="20"
        FontFamily="07やさしさゴシック"
        Title="WindowGrandPrixResult" 
        Height="640" Width="1200"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisiblityConverter"/>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="Background" Value="LightBlue"/>
                </Trigger>
            </Style.Triggers>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="Background" Value="LightBlue"/>
                </Trigger>
            </Style.Triggers>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="270"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="CheckBox">
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="Background" Value="LightBlue"/>
                </Trigger>
            </Style.Triggers>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="RadioButton">
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="Background" Value="LightBlue"/>
                </Trigger>
            </Style.Triggers>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Header="検索" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,0,10,0">
                    <TextBlock Text="ステージ"/>
                    <TextBlock Text="" Width="20"/>
                    <ComboBox x:Name="cmbStartStage" SelectionChanged="SelectionChanged_StartStage"
                        ItemsSource="{Binding obcStartStageList, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        SelectedValuePath="STAGE_CD" DisplayMemberPath="STAGE_NM">
                    </ComboBox>
                    <TextBlock Text=" ≫ "/>
                    <ComboBox x:Name="cmbGoalStage" SelectionChanged="SelectionChanged_GoalStage"
                        ItemsSource="{Binding obcGoalStageList, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        SelectedValuePath="STAGE_CD" DisplayMemberPath="STAGE_NM">
                    </ComboBox>
                    <TextBlock Text="" Width="40"/>
                    <Button Content="検索" Click="Click_Search"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="1" Header="情報" Margin="5">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                    <TextBlock Text="出発地コード:" Width="120" Visibility="Collapsed"/>
                    <TextBox Text="{Binding ResultInfo.START_CD}" Width="150" IsEnabled="False" Focusable="False" Visibility="Collapsed"/>
                    <TextBlock Text="出発地:" Width="80" />
                    <TextBox Text="{Binding ResultInfo.START_NM}" Width="270" IsEnabled="False" Focusable="False"/>
                    <TextBlock Text="目的地コード:" Width="120" Margin="20,0,0,0" Visibility="Collapsed"/>
                    <TextBox Text="{Binding ResultInfo.GOAL_CD}" Width="150" IsEnabled="False" Focusable="False" Visibility="Collapsed"/>
                    <TextBlock Text="目的地:" Width="80" Margin="20,0,0,0"/>
                    <TextBox Text="{Binding ResultInfo.GOAL_NM}" Width="270" IsEnabled="False" Focusable="False"/>
                    <TextBlock Text="ステージ種別:" Width="120" Margin="20,0,0,0"/>
                    <TextBox Text="{Binding ResultInfo.STAGE_TYP}" Width="100" IsEnabled="False" Focusable="False"/>
                    <TextBlock Text="逆走:" Width="60" Margin="20,0,0,0"/>
                    <TextBox Text="{Binding ResultInfo.REVERSE_FLG}" Width="100" IsEnabled="False" Focusable="False"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                    <TextBlock Text="アイテム:" Width="120" />
                    <TextBox Text="{Binding ResultInfo.ITEM}" Width="1000" IsEnabled="False" Focusable="False"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                    <TextBlock Text="ショトカ1:" Width="120" />
                    <TextBox Text="{Binding ResultInfo.SHTC1}" Width="800" IsEnabled="False" Focusable="False"/>
                    <Button Content="画像1の表示" Click="Click_pic1" Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                    <TextBlock Text="ショトカ2:" Width="120" />
                    <TextBox Text="{Binding ResultInfo.SHTC2}" Width="800" IsEnabled="False" Focusable="False"/>
                    <Button Content="画像2の表示" Click="Click_pic2" Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                    <TextBlock Text="ショトカ3:" Width="120" />
                    <TextBox Text="{Binding ResultInfo.SHTC3}" Width="800" IsEnabled="False" Focusable="False"/>
                    <Button Content="画像3の表示" Click="Click_pic3" Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                    <TextBlock Text="備考:" Width="120" />
                    <TextBox Text="{Binding ResultInfo.REMARK}" Width="800" Height="60" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsEnabled="False" Focusable="False"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox Grid.Row="2" Header="実績" Margin="5">

        </GroupBox>
    </Grid>
</Window>