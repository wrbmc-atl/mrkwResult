<Window x:Class="Views.WindowGrandPrixResult"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:Views.UserControls"
        xmlns:viewmodels="clr-namespace:ViewModels"
        xmlns:converters="clr-namespace:mrkwResult.Common"  
        mc:Ignorable="d"
        FontSize="20"
        FontFamily="07やさしさゴシック"
        Title="レース実績登録_WindowGrandPrixResult"
        Height="680" Width="1290"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Window.Background>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#F0F4F8" Offset="0"/>
            <GradientStop Color="#E0E8F0" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisiblityConverter"/>
        <converters:BooleanToCharConverter x:Key="BooleanToCharConverter"/>
        <Style x:Key="ImageButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Style.Triggers>
                <!-- 画像がある場合の通常時の背景色 -->
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                    <Setter Property="Background" Value="#3399FF"/>
                    <Setter Property="ToolTip" Value="画像があります"/>
                </DataTrigger>
                <!-- 画像がない場合の通常時の背景色 -->
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False">
                    <Setter Property="Background" Value="LightGray"/>
                    <Setter Property="ToolTip" Value="画像はありません"/>
                </DataTrigger>
                <!-- マウスオーバー時の共通背景色 -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5F2FF"/>
                </Trigger>
                <!-- フォーカス時の共通スタイル -->
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Trigger>
                <!-- 画像がある場合のフォーカス時の背景色 -->
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsKeyboardFocused}" Value="True"/>
                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="#1C86EE"/>
                </MultiDataTrigger>
                <!-- 画像がない場合のフォーカス時の背景色 -->
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsKeyboardFocused}" Value="True"/>
                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="#A0A0A0"/>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Header="検索" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,0,10,0">
                    <TextBlock Text="コース"/>
                    <TextBlock Text="" Width="20"/>
                    <ComboBox x:Name="cmbStartCourse"
                              ItemsSource="{Binding obcStartCourseList, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                              SelectedItem="{Binding SelectedStartCourse}" DisplayMemberPath="COURSE_NM_DISP"/>
                    <TextBlock Text=" ≫ "/>
                    <ComboBox x:Name="cmbGoalCourse"
                              ItemsSource="{Binding obcGoalCourseList, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                              SelectedItem="{Binding SelectedGoalCourse}" DisplayMemberPath="COURSE_NM_DISP"/>
                    <TextBlock Text="" Width="40"/>
                    <Button Click="Click_Search">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <iconPacks:PackIconMaterial Kind="Magnify" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="検索" Grid.Column="1" VerticalAlignment="Center" Foreground="White"/>
                        </Grid>
                    </Button>
                </StackPanel>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="1" Header="情報" Margin="5">
            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="出発地:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Text="{Binding ResultInfo.START_CD}" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" IsEnabled="False" Focusable="False" Visibility="Collapsed" Margin="0,5"/>
                <TextBox Text="{Binding ResultInfo.START_NM}" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" IsEnabled="False" Focusable="False" Margin="0,5"/>
                <TextBlock Text="目的地:" Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Text="{Binding ResultInfo.GOAL_CD}" Grid.Row="0" Grid.Column="4" VerticalAlignment="Center" IsEnabled="False" Focusable="False" Visibility="Collapsed" Margin="0,5"/>
                <TextBox Text="{Binding ResultInfo.GOAL_NM}" Grid.Row="0" Grid.Column="4" VerticalAlignment="Center" IsEnabled="False" Focusable="False" Margin="0,5"/>
                <TextBlock Text="レース種別:" Grid.Row="0" Grid.Column="6" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Text="{Binding ResultInfo.STAGE_TYP_DISP}" Grid.Row="0" Grid.Column="7" VerticalAlignment="Center" IsEnabled="False" Focusable="False" Margin="0,5"/>
                <TextBlock Text="向き:" Grid.Row="0" Grid.Column="9" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Text="{Binding ResultInfo.REVERSE_FLG_DISP}" Grid.Row="0" Grid.Column="10" VerticalAlignment="Center" IsEnabled="False" Focusable="False" Margin="0,5"/>

                <TextBlock Text="アイテム:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Text="{Binding ResultInfo.ITEM}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="11" VerticalAlignment="Center" IsEnabled="False" Focusable="False" Margin="0,5"/>

                <TextBlock Text="アイテム（コース）:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Text="{Binding CourseInfo.ITEM}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="11" VerticalAlignment="Center" IsEnabled="False" Focusable="False" Margin="0,5"/>

                <TextBlock Text="ショトカ1:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Text="{Binding ResultInfo.SHTC1}" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="11" VerticalAlignment="Center" IsEnabled="False" Focusable="False" Margin="0,5"/>
                <Button Click="Click_pic1" Grid.Row="3" Grid.Column="13" Style="{StaticResource ImageButton}" Tag="{Binding IsPic1Available}">
                    <Grid Height="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <iconPacks:PackIconMaterial Kind="Image" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="画像1" Grid.Column="1" VerticalAlignment="Center" Foreground="White"/>
                    </Grid>
                </Button>

                <TextBlock Text="ショトカ2:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Text="{Binding ResultInfo.SHTC2}" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="11" VerticalAlignment="Center" IsEnabled="False" Focusable="False" Margin="0,5"/>
                <Button Click="Click_pic2" Grid.Row="4" Grid.Column="13" Style="{StaticResource ImageButton}" Tag="{Binding IsPic2Available}">
                    <Grid Height="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <iconPacks:PackIconMaterial Kind="Image" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="画像2" Grid.Column="1" VerticalAlignment="Center" Foreground="White"/>
                    </Grid>
                </Button>
                <TextBlock Text="ショトカ（コース）:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Text="{Binding CourseInfo.SHTC}" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="11" VerticalAlignment="Center" IsEnabled="False" Focusable="False" Margin="0,5"/>
                <Button Click="Click_pic3" Grid.Row="5" Grid.Column="13" Style="{StaticResource ImageButton}" Tag="{Binding IsPic3Available}">
                    <Grid Height="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <iconPacks:PackIconMaterial Kind="Image" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="画像3" Grid.Column="1" VerticalAlignment="Center" Foreground="White"/>
                    </Grid>
                </Button>

                <TextBlock Text="備考:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Top" Margin="0,5"/>
                <TextBox Text="{Binding ResultInfo.REMARK}" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="11" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Focusable="True" Margin="0,5" MinHeight="45"/>

                <TextBlock Text="備考（コース）:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Top" Margin="0,5"/>
                <TextBox Text="{Binding CourseInfo.REMARK}" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="11" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Focusable="True" Margin="0,5" MinHeight="45"/>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="実績" Margin="5">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,5,0,5">
                    <TextBlock Text="" Width="20"/>
                    <TextBlock Text="日付:" Width="45" Margin="5,0,0,0"/>
                    <local:DateUpDown Value="{Binding JissekiInfo.RACE_DATE, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat='{}{0:yyyy/MM/dd}'}"
                                         Width="150"/>
                    
                    <TextBlock Text="" Width="20"/>
                    <TextBlock Text="参加人数:" Width="80" Margin="5,0,0,0"/>
                    <local:NumericUpDown Value="{Binding JissekiInfo.HEADCOUNT, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                         Minimum="0" Maximum="24" Width="120"/>
                    <TextBlock Text="" Width="20"/>
                    <TextBlock Text="順位:" Width="45" Margin="5,0,0,0"/>
                    <local:NumericUpDown Value="{Binding JissekiInfo.RANK, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                         Minimum="0" Maximum="24" Width="120"/>
                    <TextBlock Text="" Width="20"/>
                    <TextBlock Text="終了時レート:" Width="120" Margin="5,0,0,0"/>
                    <local:NumericUpDown Value="{Binding JissekiInfo.RATE_END, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Width="120"/>
                    <TextBlock Text="" Width="20"/>
                    <CheckBox Content="ミラー" IsChecked="{Binding JissekiInfo.MIRROR_FLG, Converter={StaticResource BooleanToCharConverter}}"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,5,0,5">
                    <TextBlock Text="メモ:" Width="60" VerticalAlignment="Top"/>
                    <TextBox Text="{Binding JissekiInfo.REMARK}" Width="1020" AcceptsReturn="True"
                             TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                    <TextBlock Text="" Width="10"/>
                    <Button Click="Click_Register">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <iconPacks:PackIconMaterial Kind="DatabasePlus" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="登録" Grid.Column="1" VerticalAlignment="Center" Foreground="White"/>
                        </Grid>
                    </Button>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
